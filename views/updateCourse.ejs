<%- include ('header') %>

<% if(errors && Object.keys(errors).length > 0 ) { %>
    <div class="alert alert-danger">
        <ul>
            <% for(let i in errors) { %>
                <li><%=errors[i]%></li>
            <% } %>
        </ul>
    </div>
<% } %>

<form action="/updateCourse/?<%=course.photo%>" method="put">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" name="name" value="<%=course.name%>"/>
    </div>
    
    <div class="form-group">
        <label for="description">Description</label>
        <textarea class="form-control" name="description" rows="5"><%=course.description%></textarea>
    </div>
    
    <div class="form-group">
        <label for="photo">Photo URL</label>
        <input type="text" class="form-control" name="photo" value="<%=course.photo%>"/>
    </div>
    
    <div class="form-group">
        <label for="duration">Duration (Hrs)</label>
        <input type="number" class="form-control" name="duration" value="<%=course.duration%>"/>
    </div>
    
    <button class="btn btn-primary">Update</button>
</form>

<%- include ('footer') %>